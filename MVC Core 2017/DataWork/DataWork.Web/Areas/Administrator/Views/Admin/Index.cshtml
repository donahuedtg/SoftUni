@model AdminNewUserViewModel
@{
    ViewData["Title"] = "Index";

    string newUserText = Model.Count == 0 ? "No new user" : $"You have {Model.Count} new user to add leave days";
}
<div class="jumbotron">
    <h1>Leave and Work System</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>New User Info</h2>
        <p>
            <a asp-action="List" asp-controller="@GlobalConstString.ControllerAdmin" class="btn btn-danger">
                <span class="badge">@newUserText</span>
            </a>
        </p>
    </div>

    <div class="col-md-4">
        <h2>Leave</h2>
        <p>
            Create a leave request.
        </p>
        <p><a asp-action="Create" asp-controller="@GlobalConstString.ControllerLeaves" asp-area="" class="btn btn-default">Create New</a></p>
    </div>

    <div class="col-md-4">
        <h2>Work Notes</h2>
        <p>
            Create a work notes by days, months, years.
        </p>
        <p><a asp-action="Create" asp-controller="@GlobalConstString.ControllerWorks" asp-area="" class="btn btn-default">Create New</a></p>
    </div>

</div>

